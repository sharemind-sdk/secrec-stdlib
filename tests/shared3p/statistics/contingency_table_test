import stdlib;
import shared3p;
import shared3p_statistics_common;
import test_utility;

domain pd_shared3p shared3p;

template<type T>
bool contingency_table_test(T data) {
	pd_shared3p T[[1]] in_data (8) = {0, 0, 2, 0, 0, 2, 2, 0};
	pd_shared3p bool[[1]] cases (8) = {true, true, true, true, false, false, false, false};
	pd_shared3p bool[[1]] controls (8) = !cases;
	
	
	//crashes if there are 0 in the input that are not mapped to other values
	//temporarly leaving it at this, the function is broken
	T[[2]] code_book = reshape({2, 0, 2, 1}, 2, 2);
	
	printMatrix(code_book);

	pd_shared3p T[[2]] table = contingencyTable(in_data, cases, controls, code_book);
	printMatrix(declassify(table));
	
	return false;
}


void main() {
	string test_prefix = "ContingencyTable";

	test(test_prefix, contingency_table_test(0::uint32), 0::uint32);
	test(test_prefix, contingency_table_test(0::uint64), 0::uint64);

	
	test_report();

}